BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            text: ''
            size_hint_x: 0.8
            font_size: 30
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: "Up"
                font_size: 30
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                font_size: 30
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to km"
        font_size: 30
        on_press: app.convert_miles_km(miles_input.text)
    Label:
        text: app.message
        id: output_label
        color: (1, 1, 0, 1)
        font_size: 30
